{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*", "src/*"]
    },
    "outDir": "dist",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es5", "es6", "es7", "es2015.promise" ,"dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}
